{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1;Port=5432;Database=insert_your_database_here;User id=insert_your_user_here;Password=insert_your_password_here;Include Error Detail=True;"
  },
  "EmailSettings": {
    "Bcc": "insert_your_bcc_email_here"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Warning",
      "Golub": "Information"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "IncludeScopes": true
      }
    }
  },
  "Security": {
    "PublicKey": "insert_your_public_key_here",
    "PrivateKey": "insert_your_private_key_here"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Discord" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "insert_your_path_here\\log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Discord",
        "Args": {
          "RestrictedToMinimumLevel": "Error",
          "WebHookId": "insert_your_webhook_id_here",
          "WebHookToken": "insert_your_webhook_token_here"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithExceptionDetails"
    ],
    "Properties": {
      "ApplicationName": "Serilog.WebApplication"
    }
  }
}
